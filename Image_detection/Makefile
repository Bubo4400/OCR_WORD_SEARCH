%.o: %.c
	@echo "ðŸ§© Compilation de $<..."
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	rm -f $(OBJ) $(BIN)

run: $(BIN)
	./$(BIN) input.png output.bmp

