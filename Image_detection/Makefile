CFLAGS = -Wall -Wextra -std=c99 `sdl2-config --cflags`
LDFLAGS = `sdl2-config --libs` -lSDL2_image
OBJ = main.o image_processing.o image_utils.o
BIN = ocr_detect

all: $(BIN)

$(BIN): $(OBJ)
